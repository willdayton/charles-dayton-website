* {
    -webkit-tap-highlight-color rgba(0,0,0,0)
    -webkit-tap-highlight-color transparent /* For certain Android devices */
    -webkit-user-select none
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
}

:root {
    font-size 62.5%
}

html {
    font-size 62.5%
    overflow-x hidden
    overflow-y auto
}

body {
    overflow-x hidden
    overflow-y auto
    box-sizing border-box
    user-select none
    text-align center
    background-color #f5f5f5
    color #222
    font-family "Raleway", "HelveticaNeue-Light", "Helvetica Neue Light", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
    font-weight 400
    line-height 1.6
}

a {
    text-decoration none
    color #1EAEDB
}

a:hover { 
    color #0FA0CE
}

a:hover,
a:active,
a:focus {
    outline 0
}

ul { 
  list-style circle inside
}

ol { 
  list-style decimal inside
}

ol, ul {
  padding-left 0
  margin-top 0
}

ul ul, 
ul ol,
ol ol, 
ol ul { 
  margin 1.5rem 0 1.5rem 3rem 
  font-size 90%
}

li {
  margin-bottom 1rem
}

.responsive-container {
    position relative 
    width 100% 
    max-width 960px 
    margin 0 auto 
    padding 0 20px
    box-sizing border-box
}

.column,        
.columns { 
  width 100% 
  float left 
  box-sizing border-box
}

.responsive-container:after,
.row:after { 
  content ""
  display table
  clear both
}

@media (min-width: 400px) {
    .responsive-container {
        width 85%
        padding 0
    }
}

@media (min-width: 768px) {
    .responsive-container {
        width 80%
    }
    
    .column,
    .columns {
      margin-left 4%
    }
    
    .column:first-child,        
    .columns:first-child { 
      margin-left 0
    }
    
    .one.column,
    .one.columns       { width: 4.66666666667%; }
    .two.columns       { width: 13.3333333333%; }
    .three.columns     { width: 22%;            }
    .four.columns      { width: 30.6666666667%; }
    .five.columns      { width: 39.3333333333%; }
    .six.columns       { width: 48%;            }
    .seven.columns     { width: 56.6666666667%; }
    .eight.columns     { width: 65.3333333333%; }
    .nine.columns      { width: 74.0%;          }
    .ten.columns       { width: 82.6666666667%; }
    .eleven.columns    { width: 91.3333333333%; }
    .twelve.columns    { width: 100%; margin-left: 0; }

    .one-third.column  { width: 30.6666666667%; }
    .two-thirds.column { width: 65.3333333333%; }

    .one-half.column   { width: 48%; }
}