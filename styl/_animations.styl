// breathe
@keyframes breathe {
  0%   { opacity: 0.3333; }
  50%  { opacity: 1; }
  100% { opacity: 0.3333; }
}

// fadeIn
@keyframes fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
}

// fadeInRight
@keyframes fadeInRight {
    from { opacity: 0; transform: translateX(100px); }
    to   { opacity: 1; transform: translateX(0); }
}

// fadeInLeft
@keyframes fadeInLeft {
    from { opacity: 0; transform: translateX(-100px); }
    to   { opacity: 1; transform: translateX(0); }
}