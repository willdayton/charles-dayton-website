h1, h2, h3, h4, h5, h6 { 
    margin-top 0
    margin-bottom 2rem
    font-weight 300
}

h1 {
    fontSize(4.0)
    line-height 1.2
    letter-spacing -.1rem
}

h2 {
    fontSize(3.6)
    line-height 1.25
    letter-spacing -.1rem
}

h3 {
    fontSize(3.0)
    line-height 1.3 
    letter-spacing -.1rem
}

h4 {
    fontSize(2.4)
    line-height 1.35
    letter-spacing -.08rem
}

h5 {
    fontSize(1.8)
    line-height 1.5 
    letter-spacing -.05rem
}

h6 {
    fontSize(1.5)
    line-height 1.6 
    letter-spacing 0
}

strong {
    font-weight 600
}

.work-title {
    font-style italic
}

@media ( min-width: 768px ) {
    h1 {
        fontSize(5.0)
    }
    h2 {
        fontSize(4.2)
    }
    h3 {
        fontSize(3.6)
    }
    h4 {
        fontSize(3.0)
    }
    h5 {
        fontSize(2.4)
    }
}